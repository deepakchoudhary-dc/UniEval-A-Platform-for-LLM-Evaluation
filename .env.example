# Environment Variables
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Database
DATABASE_URL=sqlite:///chatbot_memory.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# Memory Settings
MAX_MEMORY_ENTRIES=10000
MEMORY_RETENTION_DAYS=365

# Search Settings
SEARCH_INDEX_PATH=data/search_index
MAX_SEARCH_RESULTS=10


# Model Settings
DEFAULT_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Model Provider: openai, openrouter, ollama
MODEL_PROVIDER=ollama
# Ollama model name (e.g., qwen3:1.7b)
OLLAMA_MODEL=qwen3:1.7b

# Explainability
ENABLE_LIME=true
ENABLE_SHAP=true
EXPLANATION_DETAIL_LEVEL=medium

# Fairness
BIAS_THRESHOLD=0.1
FAIRNESS_CHECK_ENABLED=true

# API Settings
API_HOST=localhost
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
